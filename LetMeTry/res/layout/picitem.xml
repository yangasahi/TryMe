<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relar1"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/itembg_one_n"
        android:clickable="false"
        android:gravity="center" >

        <ImageView
            android:id="@+id/itemImage0"
            android:layout_width="90dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/card_feed_b" />

        <TextView
            android:id="@+id/hotelname"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/itemImage0"
            android:padding="9dp"
            android:singleLine="true"
            android:text="goodsName"
            android:textColor="#C00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotelname"
            android:layout_toRightOf="@id/itemImage0"
            android:paddingLeft="8dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hotelname"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:text="试用次数:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tele"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/itemImage0"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hintText1"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>

</LinearLayout>